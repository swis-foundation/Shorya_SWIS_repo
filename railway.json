{
  "$schema": "https://docs.railway.app/schemas/railway.schema.json",
  "services": [
    {
      "name": "Backend",
      "project": "Node.js",
      "root": "server",
      "build": {
        "build_command": "npm install"
      },
      "start": {
        "start_command": "npm start"
      }
    },
    {
      "name": "Frontend",
      "project": "React",
      "root": "client",
      "build": {
        "build_command": "npm run build"
      },
      "start": {
        "start_command": "serve -s dist -l 3001"
      }
    }
  ]
}
